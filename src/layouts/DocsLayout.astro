---
export interface Props {
  title: string;
  description?: string;
  activeSlug?: string;
}

const {
  title,
  description = "Rich Learning Documentation",
  activeSlug = ""
} = Astro.props;

const base = import.meta.env.BASE_URL;

const sections = [
  { label: "Overview", slug: "", href: `${base}docs/` },
  { label: "Getting Started", slug: "getting-started", href: `${base}docs/getting-started/` },
  { label: "Architecture", slug: "architecture", href: `${base}docs/architecture/` },
  { label: "Configuration", slug: "configuration", href: `${base}docs/configuration/` },
  { label: "API Reference", slug: "api-reference", href: `${base}docs/api-reference/` },
];
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title} — Rich Learning Docs</title>
  <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
</head>
<body>
  <nav class="nav">
    <div class="nav-inner">
      <a href={base} class="logo">
        <span class="logo-icon">◆</span> Rich Learning
      </a>
      <div class="nav-links">
        <a href={`${base}docs/`} class="active-nav">Docs</a>
        <a href={`${base}#how-it-works`}>How It Works</a>
        <a href={`${base}#benchmark`}>Benchmark</a>
        <a href="https://github.com/Minu476/rich-learning" class="nav-cta" target="_blank">GitHub</a>
      </div>
    </div>
  </nav>

  <div class="docs-wrapper">
    <aside class="docs-sidebar">
      <div class="sidebar-header">Documentation</div>
      <ul class="sidebar-nav">
        {sections.map(s => (
          <li>
            <a
              href={s.href}
              class:list={["sidebar-link", { active: s.slug === activeSlug }]}
            >
              {s.label}
            </a>
          </li>
        ))}
      </ul>
      <div class="sidebar-divider"></div>
      <div class="sidebar-section-label">Resources</div>
      <ul class="sidebar-nav">
        <li><a href="https://github.com/Minu476/rich-learning" target="_blank" class="sidebar-link">GitHub ↗</a></li>
        <li><a href={base} class="sidebar-link">← Back to Home</a></li>
      </ul>
    </aside>

    <main class="docs-content">
      <slot />
    </main>
  </div>
</body>
</html>

<style is:global>
  *, *::before, *::after {
    margin: 0; padding: 0; box-sizing: border-box;
  }

  :root {
    --void: #0a0a0a;
    --surface: #111111;
    --surface-2: #1a1a1a;
    --border: #222222;
    --border-light: #2a2a2a;
    --text: #e0e0e0;
    --text-dim: #888888;
    --accent: #00ff88;
    --accent-dim: #00cc6a;
    --accent-glow: rgba(0, 255, 136, 0.15);
    --mono: 'JetBrains Mono', monospace;
    --sans: 'Inter', system-ui, sans-serif;
  }

  html { scroll-behavior: smooth; }

  body {
    background: var(--void);
    color: var(--text);
    font-family: var(--sans);
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
  }

  a { color: var(--accent); text-decoration: none; transition: opacity 0.2s; }
  a:hover { opacity: 0.8; }

  /* ═══ Nav ═══ */
  .nav {
    position: fixed; top: 0; left: 0; right: 0; z-index: 100;
    background: rgba(10, 10, 10, 0.85);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
  }
  .nav-inner {
    max-width: 1200px; margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex; align-items: center; justify-content: space-between;
  }
  .logo {
    font-weight: 600; font-size: 1.1rem; color: var(--text);
    display: flex; align-items: center; gap: 0.5rem;
  }
  .logo-icon { color: var(--accent); font-size: 1.2rem; }
  .nav-links {
    display: flex; align-items: center; gap: 1.5rem; font-size: 0.9rem;
  }
  .nav-links a { color: var(--text-dim); }
  .nav-links a:hover { color: var(--text); }
  .active-nav { color: var(--accent) !important; }
  .nav-cta {
    background: var(--accent) !important;
    color: var(--void) !important;
    padding: 0.4rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.85rem;
  }
</style>

<style>
  /* ═══ Docs Layout ═══ */
  .docs-wrapper {
    display: grid;
    grid-template-columns: 260px 1fr;
    min-height: 100vh;
    padding-top: 3.5rem;
  }

  /* ═══ Sidebar ═══ */
  .docs-sidebar {
    position: sticky;
    top: 3.5rem;
    height: calc(100vh - 3.5rem);
    overflow-y: auto;
    background: var(--surface);
    border-right: 1px solid var(--border);
    padding: 2rem 1.5rem;
  }

  .sidebar-header {
    font-family: var(--mono);
    font-size: 0.7rem;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1.25rem;
  }

  .sidebar-nav {
    list-style: none;
    margin-bottom: 1rem;
  }

  .sidebar-link {
    display: block;
    padding: 0.45rem 0.75rem;
    color: var(--text-dim);
    font-size: 0.9rem;
    border-radius: 6px;
    transition: all 0.15s;
    margin-bottom: 2px;
  }

  .sidebar-link:hover {
    color: var(--text);
    background: var(--surface-2);
    opacity: 1;
  }

  .sidebar-link.active {
    color: var(--accent);
    background: var(--accent-glow);
    font-weight: 500;
  }

  .sidebar-divider {
    height: 1px;
    background: var(--border);
    margin: 1.25rem 0;
  }

  .sidebar-section-label {
    font-size: 0.7rem;
    color: var(--text-dim);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  /* ═══ Content ═══ */
  .docs-content {
    max-width: 800px;
    padding: 3rem 3rem 6rem;
  }

  .docs-content :global(h1) {
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .docs-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border);
  }

  .docs-content :global(h3) {
    font-size: 1.15rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--accent);
  }

  .docs-content :global(p) {
    margin-bottom: 1rem;
    color: var(--text-dim);
    line-height: 1.8;
  }

  .docs-content :global(strong) {
    color: var(--text);
  }

  .docs-content :global(code) {
    font-family: var(--mono);
    font-size: 0.85em;
    background: var(--surface-2);
    border: 1px solid var(--border);
    padding: 0.15em 0.4em;
    border-radius: 4px;
    color: var(--accent);
  }

  .docs-content :global(pre) {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem 1.5rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    font-family: var(--mono);
    font-size: 0.85rem;
    line-height: 1.6;
  }

  .docs-content :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    color: var(--text);
  }

  .docs-content :global(ul),
  .docs-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    color: var(--text-dim);
  }

  .docs-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .docs-content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding: 0.75rem 1.25rem;
    margin-bottom: 1.5rem;
    background: var(--accent-glow);
    border-radius: 0 8px 8px 0;
  }

  .docs-content :global(blockquote p) {
    color: var(--text);
    margin-bottom: 0;
  }

  .docs-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  .docs-content :global(th) {
    text-align: left;
    padding: 0.75rem 1rem;
    background: var(--surface);
    border: 1px solid var(--border);
    color: var(--text);
    font-weight: 600;
  }

  .docs-content :global(td) {
    padding: 0.75rem 1rem;
    border: 1px solid var(--border);
    color: var(--text-dim);
  }

  .docs-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2rem 0;
  }

  /* ═══ Responsive ═══ */
  @media (max-width: 768px) {
    .docs-wrapper {
      grid-template-columns: 1fr;
    }
    .docs-sidebar {
      position: static;
      height: auto;
      border-right: none;
      border-bottom: 1px solid var(--border);
      padding: 1.5rem;
    }
    .docs-content {
      padding: 2rem 1.5rem 4rem;
    }
    .nav-links { display: none; }
  }
</style>
